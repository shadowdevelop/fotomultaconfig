<!-- views/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Panel de control FotoMultas</title>
  <!-- Agregar Bootstrap CSS -->
  <link href="/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <div class="row">
    <div class="col-md-2"><img src="/logo.jpg" alt="Logo" class="img-fluid mb-3" width="75px"> </div>
    <div class="col-md-6"><h2>Panel de control FotoMultas</h2></div>
    <div class="col-md-4 text-end"><a href="/logout" class="btn btn-secondary">Cerrar sesi√≥n</a></div>
      
    </div>
    <div class="text-end">
      <a href="/config" class="btn btn-info">Configurar</a>&nbsp;<a href="/reporte" class="btn btn-info">Ver Reporte</a>&nbsp;<a href="/uploadlist" class="btn btn-info">Versiones</a> 
    </div>
    <h1>Tabla de registros</h1>
    
    <table class="table">
      <thead>
        <tr>
          <th>Clave</th>
          <th>Valor Actual</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
      <% rows.forEach(row => { %>
        <%
          const tipo=row.tipo;
          let clase='';
          if (tipo===1){
            clase='n-int';
          }
          if (tipo===2){
            clase='n-float';
          }
        %>        
        <tr>
          <td><%= row.id %></td>                    
          <td><%= row.value %></td>            
          <td>
            <form action="/updateconfig" method="POST" class="d-inline"> 
              <input type="hidden" name="id" value="<%= row.id %>">
              <input type="text" class="<%= clase %>"  name="newValue" placeholder="Nuevo valor">
              <button type="submit">Actualizar</button>
            </form>
          </td>
        </tr>
      <% }); %>
    </tbody>
    </table>
    <div class="text-end">
      <a href="/resetservice" class="btn btn-success">Aplicar Cambios</a> 
    </div>
    <script src="/jquery.js"></script>
    <script src="/config.js" ></script>
</body
