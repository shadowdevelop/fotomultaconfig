<!-- views/camera.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Visualización de cámara IP en tiempo real</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .camera-container {
      position: relative;
    }

    .camera-text {
      position: absolute;
      bottom: 0;
      left: 0;
      background-color: rgba(0, 0, 0, 0.5);
      color: white;
      padding: 5px;
      font-size: 1.2rem;
    }
  </style>
</head>
<body>
    <pre><%=  JSON.stringify(rowData, null, 2) %></pre>
  <div class="container mt-5">
    <div class="text-end">
      <a href="/logout" class="btn btn-secondary">Cerrar sesión</a>
    </div>
    <h1>Visualización de cámara IP en tiempo real</h1>
    <div class="mt-3 camera-container">
      <img id="cameraStream" src="" alt="Cámara IP en tiempo real" class="img-fluid">
      <!-- Agregar texto adicional aquí -->
      <div class="camera-text">Texto adicional</div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
  <script>
    // Reemplazar con la URL de la transmisión de video de tu cámara IP
    const cameraUrl = '<%= rowData.value %>';
    
    const cameraStream = document.getElementById('cameraStream');
    cameraStream.src = cameraUrl;
  </script>
</body>
</html>